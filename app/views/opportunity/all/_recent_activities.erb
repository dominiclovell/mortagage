<table width="584" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td><img src="/images/cor01.gif" alt="" border="0" /></td>
    <td class="CorBg01"></td>
    <td><img src="/images/cor02.gif" alt="" border="0" /></td>
  </tr>
  <tr>
    <td width="10" class="CorBg02"></td>
    <td width="564" valign="top">
      <div class="Heading01Divs">
       <%= render_box_arrow(__FILE__, 'Recent Activity') %>
	   </div>       
      <br />
      <br />

      <table width="564" border="0" cellspacing="0" cellpadding="0" class="Text01">
        <tr>
          <td valign="top">
            <table width="544" border="0" cellspacing="0" cellpadding="2">
              <tr>
                <td width="120" valign="bottom">
                  <table border="0" cellspacing="0" cellpadding="0">
                    <tr>
                      <td valign="bottom"class="SubHeadingBlack">Client</td>
                      <td width="2"></td>
                    </tr>
                  </table>
                </td>
                <td width="10"></td>
                <td width="194" valign="bottom">
                  <table border="0" cellspacing="0" cellpadding="0">
                    <tr>
                      <td valign="bottom"class="SubHeadingBlack">Item</td>
                      <td width="2"></td>
                    </tr>
                  </table>
                </td>
                <td width="10"></td>
                <td width="100" valign="bottom">
                  <table border="0" cellspacing="0" cellpadding="0">
                    <tr>
                      <td valign="bottom"class="SubHeadingBlack">Status</td>
                      <td width="2"></td>
                    </tr>
                  </table>
                </td>
                <td width="10"></td>
                <td width="100" valign="bottom">
                  <table border="0" cellspacing="0" cellpadding="0">
                    <tr>
                      <td valign="bottom"class="SubHeadingBlack">Date</td>
                      <td width="2"></td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
           	<div style="width:auto; height:auto; overflow:auto;">
              <table width="544" border="0" cellspacing="0" cellpadding="2">
                <%
                @recent_activities.each do |activity|
                  td_class = cycle("Row02", "Row01")
                %>
                  <tr class="<%=  td_class %>">
                    <td width="120" valign="middle" class="TextColor01">
                    <%= link_to(h(activity.activity_client), {:controller=>"/portfolio/household_overview", :action=>"show", :id=>activity.household_id},{:class => "Link01"}) %>
                    </td>
                    <td width="10"></td>
                    <td width="194" valign="middle"><%= link_to(h(activity.activity_item), activity.activity_link_options,:class=>"Link01" ) %></td>
                    <td width="10"></td>
                    <td width="100"valign="middle"><span class="TextColor01"><%= activity.activity_status %></span></td>
                    <td width="10"></td>
                    <td width="100" valign="middle"><%= activity.activity_date.strftime("%m/%d/%Y") %></td>
                  </tr>
                <% end %>
              </table>
            </div>
          </td>
        </tr>
      </table>
    </td>
    <td width="10" class="CorBg03"></td>
  </tr>
  <tr>
    <td><img src="/images/cor03.gif" alt="" border="0" /></td>
    <td class="CorBg04"></td>
    <td><img src="/images/cor04.gif" alt="" border="0" /></td>
  </tr>
</table>