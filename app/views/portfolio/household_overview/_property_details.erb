        <tr>
          <td height="10"></td>
        </tr>
        <%if !@household.base_case_refi_scenario.blank?%>
          <% @household.base_case_refi_scenario.refi_properties.each do |refi_property| %>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>

              <td></td>
            </tr>

            <tr>
              <td valign="top">
              <span class="TextColor01"><%=link_to refi_property.property.to_label , {:action =>'property_detail',:property_id =>refi_property.property.id, :id => @household.id},:class =>"Link02" %></span></td>
              <td>&nbsp; </td>
              <td valign="top" align="center">
              <span><%=number_to_currency(refi_property.total_loan_amount,:precision=>0)%></span></td>				
