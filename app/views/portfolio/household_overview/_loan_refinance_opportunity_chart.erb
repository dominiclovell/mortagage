				 {:x => 0, :y => 210, :text => cdata_section("<b>Monthly Payment</b>"),:rotate =>true, :align => "center",
				  :text_size => 13,:text_color => '#A69C75'} 
			  ]
        },
      }).to_xml) do
    render :partial => '/common/missing_flash'
  end

%>
</div>