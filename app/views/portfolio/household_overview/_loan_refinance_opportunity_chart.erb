<div id="loan_refinance_opportunity" style="float:left;">
<%=
  ambling_chart(:column,
    :chart_data => @loan_refinance_opportunity_chart_data,
    :id => "loan_refinance_opportunity", :width => 350, :height => 280,	
    :chart_settings => Ambling::Column::Settings.new({
		:thousands_separator => ",",
        :column => {
          :type => "stacked", :width => 90, :spacing => 5,
          :balloon_text => "{series}, the {title} was {value}",
          :data_labels => cdata_section("<b>${value}</b>"),
          :data_labels_position => "inside",
          :data_labels_text_color => "#ffffff"         
        },
        :values => {
          :category => {:color => "#4A452A"},:value => {:unit =>'$',:unit_position => 'left',:frequency => 1.2,:skip_first => false,:color => "#948A54"}
