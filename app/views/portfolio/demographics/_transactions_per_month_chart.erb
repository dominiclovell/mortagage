<div id="transactions_per_month" style="float:left;">
  <%=
  ambling_chart(:column,  :chart_data => @transactions,
    :id => 'transactions_per_month', :width => 300, :height => 195,
    :chart_settings => Ambling::Column::Settings.new({
        :column => {
          :type => "stacked", :width => 97, :spacing => 10,
          :balloon_text => cdata_section("Transactions in {series}: {value}")
        },
        :grid => {
          :category => {:alpha => 0}, :value => {:alpha => 5}
        },
        :values => {
          :category => {:enabled => true, :rotate => 90,:frequency => 2,:color => "#948A54"},:value => {:color => "#948A54"}
        },
        :plot_area => {
          :margins => {:left => 40, :top => 40, :right => 40, :bottom => 60}
        },
        :legend => {
          :enabled => false, :x => 195, :y => 20, :width => 100, :text_color => '#000',
          :max_columns => 1, :spacing => 1, :text_size => 10,
          :key => {:size => 10}
        },
        :labels => {
          :label => [
            {:x => 20, :y => 5, :text => cdata_section("<b>Transactions per Month</b>"),
              :text_size => 12, :text_color => '#4A452A'},
            {:x => 30, :y => 170, :text => "", :align => "center", :width => 180,
              :text_size => 13}
          ]
        }
      }).to_xml) do
    render :partial => '/common/missing_flash'
  end
%>

</div>